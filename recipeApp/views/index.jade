extends layout

block content
  .container
    .page-header 
      h1 My Recipes  
        small.text-warning log in to manage your recipes
    .row
      .col-md-6.col-md-offset-3
        form.form-group(action='/users/login' method='post')
          label(for='email')
            i(class='glyphicon glyphicon-envelope')
            strong   Email
          input.form-control(type='email' name='email' id='email')
          label(for='password')
            i(class="fa fa-unlock-alt")
            strong   Password
          input.form-control(type='password' name='password' id='password')
          button(type='submit' class='btn btn-warning') Log In