extends layout

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/recipes') Recipes
      ul.nav.navbar-nav.navbar-right
        li
          h4.navbar-text 
            i(class='glyphicon glyphicon-user')  
              span.user User
        li
          a(href='/users/logout') Log Out
  .container.recipeContainer
    .recipeList
      h3.text-center.text-danger Recipe List
      form.navbar-form.navbar-left(role='search')
        .form-group
          input.form-control(ng-model='search', type='text', placeholder='Search')
      .row.margin-top.recipes(ng-repeat='recipe in recipes | filter: search')
        .col-md-12
          .row
            .recipe
              h3.text-primary {{recipe.title}}
    .recipeDetail